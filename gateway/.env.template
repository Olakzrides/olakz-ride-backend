# ===========================================
# API GATEWAY ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control!

# -----------------------------------------
# ENVIRONMENT
# -----------------------------------------
NODE_ENV=development
PORT=3000

# -----------------------------------------
# BACKEND SERVICE URLS
# -----------------------------------------
# URLs for backend microservices
AUTH_SERVICE_URL=http://localhost:3003
LOGISTICS_SERVICE_URL=http://localhost:3001
PAYMENT_SERVICE_URL=http://localhost:3002

# -----------------------------------------
# CORS CONFIGURATION
# -----------------------------------------
# Comma-separated list of allowed origins
# Add your frontend URLs here (web app, mobile app, etc.)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006,http://localhost:19000

# -----------------------------------------
# RATE LIMITING
# -----------------------------------------
# General rate limiting for all routes
RATE_LIMIT_WINDOW_MS=900000        # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100        # Max requests per window per IP

# -----------------------------------------
# TIMEOUTS
# -----------------------------------------
# Service timeout in milliseconds
SERVICE_TIMEOUT=10000              # 10 seconds

# -----------------------------------------
# HEALTH CHECK
# -----------------------------------------
# Health check interval in milliseconds
HEALTH_CHECK_INTERVAL=30000        # 30 seconds

# -----------------------------------------
# LOGGING
# -----------------------------------------
# Log level: error, warn, info, debug
LOG_LEVEL=info

