# ===========================================
# ROOT ENVIRONMENT VARIABLES
# ===========================================
# This file contains shared environment variables for the entire monorepo
# Copy this to .env in the root directory

# -----------------------------------------
# ENVIRONMENT
# -----------------------------------------
NODE_ENV=development

# -----------------------------------------
# DOCKER COMPOSE CONFIGURATION
# -----------------------------------------
# These are used by docker-compose.yml

# Gateway
GATEWAY_PORT=3000

# Auth Service
AUTH_SERVICE_PORT=3003

# Logistics Service
LOGISTICS_SERVICE_PORT=3001

# Payment Service
PAYMENT_SERVICE_PORT=3002

# Redis
REDIS_PORT=6379

# -----------------------------------------
# SHARED CONFIGURATION
# -----------------------------------------
# CORS - Add your frontend URLs (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006,http://localhost:19000

# Logging
LOG_LEVEL=info
