    {
      "name": "Phase 2: Multi-Step Registration Flow",
      "item": [
        {
          "name": "1. Initiate Registration (Car + Ride & Delivery)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.data.registration_id) {",
                  "        pm.collectionVariables.set('registration_id', response.data.registration_id);",
                  "        console.log('Registration ID set:', response.data.registration_id);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"vehicle_type\": \"car\",\n  \"service_types\": [\"ride\", \"delivery\"]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/driver-registration/register/initiate",
              "host": ["{{base_url}}"],
              "path": ["api", "driver-registration", "register", "initiate"]
            }
          }
        },
        {
          "name": "2. Submit Personal Information",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"first_name\": \"John\",\n  \"last_name\": \"Doe\",\n  \"middle_name\": \"Michael\",\n  \"phone\": \"+2348123456789\",\n  \"email\": \"john.doe@example.com\",\n  \"date_of_birth\": \"1990-05-15\",\n  \"gender\": \"male\",\n  \"address\": {\n    \"street\": \"123 Lagos Street\",\n    \"city\": \"Lagos\",\n    \"state\": \"Lagos State\",\n    \"postal_code\": \"100001\",\n    \"country\": \"Nigeria\",\n    \"apartment\": \"Apt 4B\",\n    \"landmark\": \"Near City Mall\"\n  },\n  \"emergency_contact\": {\n    \"name\": \"Jane Doe\",\n    \"relationship\": \"spouse\",\n    \"phone\": \"+2348987654321\",\n    \"email\": \"jane.doe@example.com\"\n  },\n  \"preferred_language\": \"english\",\n  \"has_driving_experience\": true,\n  \"years_of_experience\": 5\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/driver-registration/register/{{registration_id}}/personal-info",
              "host": ["{{base_url}}"],
              "path": ["api", "driver-registration", "register", "{{registration_id}}", "personal-info"]
            }
          }
        },
        {
          "name": "3. Submit Vehicle Details (Car)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"plate_number\": \"ABC123XY\",\n  \"manufacturer\": \"toyota\",\n  \"model\": \"Camry\",\n  \"year\": 2020,\n  \"color\": \"white\",\n  \"vin\": \"1HGBH41JXMN109186\",\n  \"seating_capacity\": 5,\n  \"fuel_type\": \"gasoline\",\n  \"transmission\": \"automatic\",\n  \"doors\": \"4\",\n  \"air_conditioning\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/driver-registration/register/{{registration_id}}/vehicle-details",
              "host": ["{{base_url}}"],
              "path": ["api", "driver-registration", "register", "{{registration_id}}", "vehicle-details"]
            }
          }
        },
        {
          "name": "4. Upload Documents",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"documents\": [\n    {\n      \"type\": \"national_id\",\n      \"url\": \"https://storage.example.com/national_id.jpg\",\n      \"filename\": \"national_id.jpg\",\n      \"size\": 2048000\n    },\n    {\n      \"type\": \"driver_license\",\n      \"url\": \"https://storage.example.com/license.jpg\",\n      \"filename\": \"license.jpg\",\n      \"size\": 1536000\n    },\n    {\n      \"type\": \"vehicle_registration\",\n      \"url\": \"https://storage.example.com/registration.pdf\",\n      \"filename\": \"registration.pdf\",\n      \"size\": 1024000\n    },\n    {\n      \"type\": \"insurance_certificate\",\n      \"url\": \"https://storage.example.com/insurance.pdf\",\n      \"filename\": \"insurance.pdf\",\n      \"size\": 1024000\n    },\n    {\n      \"type\": \"passport_photo\",\n      \"url\": \"https://storage.example.com/passport_photo.jpg\",\n      \"filename\": \"passport_photo.jpg\",\n      \"size\": 512000\n    },\n    {\n      \"type\": \"vehicle_photos\",\n      \"url\": \"https://storage.example.com/car_front.jpg\",\n      \"filename\": \"car_front.jpg\",\n      \"size\": 2048000\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/driver-registration/register/{{registration_id}}/documents",
              "host": ["{{base_url}}"],
              "path": ["api", "driver-registration", "register", "{{registration_id}}", "documents"]
            }
          }
        },
        {
          "name": "5. Submit Registration",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{}"
            },
            "url": {
              "raw": "{{base_url}}/api/driver-registration/register/{{registration_id}}/submit",
              "host": ["{{base_url}}"],
              "path": ["api", "driver-registration", "register", "{{registration_id}}", "submit"]
            }
          }
        },
        {
          "name": "Get Registration Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/driver-registration/register/{{registration_id}}/status",
              "host": ["{{base_url}}"],
              "path": ["api", "driver-registration", "register", "{{registration_id}}", "status"]
            }
          }
        }
      ]
    },
