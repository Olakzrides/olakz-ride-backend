      "item": [
        {
          "name": "Get Vehicle Types",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/driver-registration/vehicle-types",
              "host": ["{{base_url}}"],
              "path": ["api", "driver-registration", "vehicle-types"]
            }
          }
        },
        {
          "name": "Get Car Form Configuration",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/driver-registration/vehicle-types/car/form-config",
              "host": ["{{base_url}}"],
              "path": ["api", "driver-registration", "vehicle-types", "car", "form-config"]
            }
          }
        },
        {
          "name": "Get Motorcycle Form Configuration",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
