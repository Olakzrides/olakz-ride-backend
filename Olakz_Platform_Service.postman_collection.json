        {
          "name": "Get User Service Context",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response contains service context', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('success');",
                  "    pm.expect(jsonData.success).to.be.true;",
                  "    pm.expect(jsonData.data).to.have.property('recentServices');",
                  "    pm.expect(jsonData.data).to.have.property('totalServices');",
                  "});",
                  "",
                  "console.log('ðŸ‘¤ User Service Context:');",
                  "const response = pm.response.json();",
                  "console.log('Recent Services:', response.data.recentServices.length);",
                  "console.log('Total Services Used:', response.data.totalServices);"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{access_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{gateway_url}}/services/context",
              "host": ["{{gateway_url}}"],
              "path": ["services", "context"]
            },
            "description": "Get user's service usage context and history. Shows recently used services and total service count."
          },
          "response": []
