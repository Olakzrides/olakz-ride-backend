{
  "info": {
    "name": "Phase 2: Driver Registration API",
    "description": "Multi-step driver registration flow with session management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000/api/driver-registration",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "your-jwt-token-here",
      "type": "string"
    },
    {
      "key": "registration_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Get Vehicle Types (Public)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/vehicle-types",
          "host": ["{{base_url}}"],
          "path": ["vehicle-types"]
        }
      },
      "response": []
    },
    {
      "name": "2. Initiate Registration",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    const response = pm.response.json();",
              "    if (response.success && response.data.registration_id) {",
              "        pm.collectionVariables.set('registration_id', response.data.registration_id);",
              "        console.log('Registration ID saved:', response.data.registration_id);",
              "    }",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"vehicle_type\": \"car\",\n  \"service_types\": [\"ride\", \"delivery\"]\n}"
        },
        "url": {
          "raw": "{{base_url}}/register/initiate",
          "host": ["{{base_url}}"],
          "path": ["register", "initiate"]
        }
      },
      "response": []
    },
    {
      "name": "3. Submit Personal Information",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"first_name\": \"John\",\n  \"last_name\": \"Doe\",\n  \"phone\": \"+1234567890\",\n  \"date_of_birth\": \"1990-01-01\",\n  \"address\": \"123 Main St\",\n  \"city\": \"New York\",\n  \"state\": \"NY\",\n  \"postal_code\": \"10001\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/register/{{registration_id}}/personal-info",
          "host": ["{{base_url}}"],
          "path": ["register", "{{registration_id}}", "personal-info"]
        }
      },
      "response": []
    },
    {
      "name": "4. Submit Vehicle Details",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"plate_number\": \"ABC123\",\n  \"manufacturer\": \"Toyota\",\n  \"model\": \"Camry\",\n  \"year\": 2020,\n  \"color\": \"Blue\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/register/{{registration_id}}/vehicle-details",
          "host": ["{{base_url}}"],
          "path": ["register", "{{registration_id}}", "vehicle-details"]
        }
      },
      "response": []
    },
    {
      "name": "5. Upload Documents",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"documents\": [\n    {\n      \"type\": \"driver_license\",\n      \"url\": \"https://storage.example.com/license.jpg\",\n      \"filename\": \"license.jpg\"\n    },\n    {\n      \"type\": \"vehicle_registration\",\n      \"url\": \"https://storage.example.com/registration.jpg\",\n      \"filename\": \"registration.jpg\"\n    },\n    {\n      \"type\": \"insurance_certificate\",\n      \"url\": \"https://storage.example.com/insurance.jpg\",\n      \"filename\": \"insurance.jpg\"\n    }\n  ]\n}"
        },
        "url": {
          "raw": "{{base_url}}/register/{{registration_id}}/documents",
          "host": ["{{base_url}}"],
          "path": ["register", "{{registration_id}}", "documents"]
        }
      },
      "response": []
    },
    {
      "name": "6. Submit Registration",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{}"
        },
        "url": {
          "raw": "{{base_url}}/register/{{registration_id}}/submit",
          "host": ["{{base_url}}"],
          "path": ["register", "{{registration_id}}", "submit"]
        }
      },
      "response": []
    },
    {
      "name": "7. Get Registration Status",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/register/{{registration_id}}/status",
          "host": ["{{base_url}}"],
          "path": ["register", "{{registration_id}}", "status"]
        }
      },
      "response": []
    },
    {
      "name": "8. Resume Registration",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{}"
        },
        "url": {
          "raw": "{{base_url}}/register/resume",
          "host": ["{{base_url}}"],
          "path": ["register", "resume"]
        }
      },
      "response": []
    },
    {
      "name": "Test: Invalid Vehicle-Service Combination",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"vehicle_type\": \"motorcycle\",\n  \"service_types\": [\"ride\"]\n}"
        },
        "url": {
          "raw": "{{base_url}}/register/initiate",
          "host": ["{{base_url}}"],
          "path": ["register", "initiate"]
        }
      },
      "response": []
    },
    {
      "name": "Test: Missing Required Fields",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"first_name\": \"John\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/register/{{registration_id}}/personal-info",
          "host": ["{{base_url}}"],
          "path": ["register", "{{registration_id}}", "personal-info"]
        }
      },
      "response": []
    }
  ]
}